{
    "name": "Ivy League Associates",
    "short_name": "Ivy League",
    "description": "An application for Ivy League Associates.",
    "version": "1.0.0",
    "manifest_version": 2,
    "start_url": "/",
    "display": "standalone",
    "background_color": "#111827",
    "icons": [
        {
        "src": "ivyDark.png",
        "sizes": "192x192",
        "type": "image/png"
        },
        {
        "src": "ivyDark.png",
        "sizes": "512x512",
        "type": "image/png"
        }
    ],
    "shortcuts": [
        {
            "name": "Open Dashboard",
            "short_name": "Dashboard",
            "description": "View your dashboard",
            "url": "/dashboard/home?utm_source=homescreen",
            "icons": [{ "src": "/dashboard.png", "sizes": "192x192" }]
        },
        {
            "name": "View Profile",
            "short_name": "Profile",
            "description": "View your profile",
            "url": "/dashboard/profile?utm_source=homescreen",
            "icons": [{ "src": "/profile.webp", "sizes": "192x192" }]
        }
    ],
    "screenshots": [
        {
            "src": "/largeScreenShot.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide",
            "label": "Home screen showing main navigation and featured content"
        },
        {
            "src": "/largeScreenShot2.png",
            "sizes": "1280x720",
            "type": "image/png",
            "label": "Dashboard view displaying key metrics"
        }
    ]
}